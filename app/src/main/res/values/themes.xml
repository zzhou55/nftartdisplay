<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.NFTArtDisplay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#4A90E2</item> <!-- A vibrant blue color to create a modern, tech look -->
        <item name="colorPrimaryVariant">#007AFF</item> <!-- A slightly darker shade of blue for contrast -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- White text on primary buttons -->

        <!-- Secondary brand color -->
        <item name="colorSecondary">#50E3C2</item> <!-- A vibrant teal to complement the primary blue -->
        <item name="colorSecondaryVariant">#00B894</item> <!-- Darker teal for additional contrast -->
        <item name="colorOnSecondary">#000000</item> <!-- Black text on secondary buttons -->

        <!-- Customize the status bar and navigation bar colors -->
        <item name="android:statusBarColor">#007AFF</item>
        <item name="android:navigationBarColor">#FFFFFF</item>

        <!-- Background color for activities -->
        <item name="android:windowBackground">#F5F5F5</item> <!-- Light grey to make the interface look clean and modern -->

        <!-- Button styles -->
        <item name="buttonStyle">@style/Widget.NFTArtDisplay.Button</item>
    </style>

    <!-- Custom button style for the application -->
    <style name="Widget.NFTArtDisplay.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#4A90E2</item> <!-- Use primary color for buttons -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text for better contrast -->
        <item name="cornerRadius">16dp</item> <!-- Rounded corners to create a more friendly UI -->
    </style>

    <!-- Text appearance for titles -->
    <style name="TextAppearance.NFTArtDisplay.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">#4A90E2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text appearance for body text -->
    <style name="TextAppearance.NFTArtDisplay.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#333333</item>
    </style>

</resources>
